{% extends "base.jinja" %}

{% block body %}
<table>
  <thead>
    <tr>
      {% for name in day_name %}
        <th>{{ name }}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    {% for week in calendar.monthdatescalendar(year, month) %}
      <tr>
        {% for date in week %}
          <td>
            {% if date.month == month %}
              {% if date == today %}
                <strong>{{ date.day }}</strong>
              {% else %}
                {{ date.day }}
              {% endif %}
            {% else %}
              <small>{{ date.day }}</small>
            {% endif %}

            {% if date in reservations %}
              <br><small>{{ reservations[date].band }}</small>
            {% endif %}
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock body %}